<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ace5ee"
    tools:context=".UserDetails">

    <ScrollView
        android:id="@+id/scrollView6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="1">

            <!-- everything you already have -->

        </TableLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tvCurWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="239dp"
        android:layout_marginEnd="40dp"
        android:text="Pounds"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtDaily"
        android:layout_width="96dp"
        android:layout_height="45dp"
        android:layout_marginTop="168dp"
        android:layout_marginEnd="77dp"
        android:layout_marginBottom="168dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/btnSave"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView4" />

    <EditText
        android:id="@+id/txtCalorie"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="29dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tvFootmeter"
        app:layout_constraintStart_toStartOf="@+id/txtFootM"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtGoalCal"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="19dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/textView7"
        app:layout_constraintEnd_toEndOf="@+id/txtDaily"
        app:layout_constraintStart_toStartOf="@+id/txtCalorie"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <EditText
        android:id="@+id/txtGoalWeig"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="25dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/txtCalorie"
        app:layout_constraintEnd_toStartOf="@+id/tvFootmeter"
        app:layout_constraintStart_toEndOf="@+id/textVie"
        app:layout_constraintTop_toBottomOf="@+id/tvCurWeight" />


    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="11dp"
        android:text="Enter daily weight change"
        app:layout_constraintBottom_toTopOf="@+id/imgViewTwo"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="20dp"
        android:text="Enter calorie intake goal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCalorie" />

    <TextView
        android:id="@+id/textVie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:text="Enter calorie intake"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtCalorie"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="6dp"
        android:text="Enter your weight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtWeight" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginBottom="10dp"
        android:text="Enter your height"
        app:layout_constraintBottom_toBottomOf="@+id/txtFootM"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:text=" Enter goal weight"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtGoalWeig"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvFootmeter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="27dp"
        android:text="meters"
        app:layout_constraintStart_toEndOf="@+id/txtFootM"
        app:layout_constraintTop_toTopOf="@+id/txtFootM" />

    <TextView
        android:id="@+id/tvGoalWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="Pounds"
        app:layout_constraintBottom_toBottomOf="@+id/txtGoalWeig"
        app:layout_constraintStart_toEndOf="@+id/txtCalorie"
        app:layout_constraintTop_toBottomOf="@+id/txtGoalWeig" />

    <EditText
        android:id="@+id/txtFootM"
        android:layout_width="98dp"
        android:layout_height="45dp"
        android:layout_marginTop="59dp"
        android:layout_marginBottom="68dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/txtInchesCm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnMetric" />

    <EditText
        android:id="@+id/txtWeight"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/txtGoalWeig"
        app:layout_constraintEnd_toEndOf="@+id/txtCalorie"
        app:layout_constraintStart_toStartOf="@+id/txtInchesCm"
        app:layout_constraintTop_toBottomOf="@+id/txtInchesCm" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint=" #DAB5D2"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnImperial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FEC9C9"
        android:text="Imperial"
        app:layout_constraintEnd_toEndOf="@+id/tvFootmeter"
        app:layout_constraintStart_toEndOf="@+id/tvFootmeter"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnMetric"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FEC9C9"
        android:text="Metric"
        app:layout_constraintStart_toStartOf="@+id/txtFootM"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtInchesCm"
        android:layout_width="97dp"
        android:layout_height="44dp"
        android:layout_marginTop="144dp"
        android:layout_marginBottom="145dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/tvGoalWeight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvInches"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginBottom="25dp"
        android:text="Inches"
        app:layout_constraintBottom_toTopOf="@+id/txtWeight"
        app:layout_constraintStart_toEndOf="@+id/txtWeight" />

    <ImageView
        android:id="@+id/imgViewTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="@+id/btnCameraTwo"
        app:layout_constraintTop_toBottomOf="@+id/txtDaily"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/btnCameraTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginEnd="159dp"
        android:layout_marginBottom="13dp"
        android:backgroundTint=" #DAB5D2"
        android:text="Camera"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView8" />
</androidx.constraintlayout.widget.ConstraintLayout>